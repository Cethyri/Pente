<UserControl x:Class="Pente.PieceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pente"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Button Name="bttn" Click="Button_Click" BorderThickness="0" Margin="0">
        <Image Name="imgNotWorking" Source="{Binding Path=ImagePath, Mode=OneWay}" Margin="-2" Stretch="Uniform"></Image>
    </Button>
</UserControl>
